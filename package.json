{
  "name": "queue-tea",
  "version": "1.0.3",
  "description": "A simple, robust, persistable job & task queue written in typescript. Full type safety included.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "nanoevents": "^6.0.0"
  },
  "scripts": {
    "test": "jest",
    "build": "tsup"
  },
  "devDependencies": {
    "@babel/preset-env": "7.14.7",
    "@types/jest": "26.0.24",
    "babel-jest": "27.0.6",
    "jest": "26.6.3",
    "prettier": "2.3.2",
    "ts-jest": "26.5.6",
    "tsup": "4.12.5",
    "typescript": "4.3.5",
    "wait-for-expect": "^3.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "tsup": {
    "splitting": false,
    "clean": true,
    "format": [
      "esm",
      "cjs"
    ],
    "entryPoints": [
      "src/index.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "preset": "ts-jest/presets/js-with-babel",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/?!(nanoevents)/"
    ]
  },
  "keywords": [
    "queue",
    "task",
    "taskqueue",
    "job",
    "jobqueue",
    "typescript",
    "local"
  ]
}
